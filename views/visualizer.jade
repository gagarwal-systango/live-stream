extends layout
block addStyle
  link(rel='stylesheet', href='stylesheets/style.css')
  link(rel='stylesheet', href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css')
  script(src='https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js')
  script(src='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js')
  style.
    .main.min_image{ width: 400px; height: 320px; margin: 70px auto 0px;}
    p#demo{ margin-bottom: 0px !important;}
  
block content
  
  body(style=' background-image: url("/images/bg2.jpg");background-size: cover')
  .main.min_image(style='text-align: center; position: relative' )
    img#play(class='', src='', style='width: 400px; height: 320px; border-radius:8px; border: 3px solid #ddd; border-color:black')
    p#demo
    button#max(type='button', onclick="fullsize()", style='position: absolute; bottom: 10px; right: 10px; background:rgba(255,255,255,.7); border:none; padding:6px 10px; color:#000')  
      span.glyphicon.glyphicon-resize-full
    button#min(type='button', onclick="minimize()", style='position: absolute; bottom: 10px; right: 50px; background:rgba(255,255,255,.7); border:none; padding:6px 10px; color:#000')   
      span.glyphicon.glyphicon-resize-small
          

  script(src="/js/pako.js")
  script(src='/js/visualizer.js')

  