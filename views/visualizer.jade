extends layout
block addStyle
  link(rel='stylesheet', href='stylesheets/style.css')
  style.
    .main.min_image{ width: 400px; height: 320px; margin: 70px auto 0px;}
    p#demo{ margin-bottom: 0px !important;}
  
block content
  
  body(style=' background-image: url("/images/bg2.jpg");background-size: cover')
  .main.min_image(style='text-align: center; position: relative' )
    img#play(class='', src='', style='width: 400px; height: 320px; border-radius:8px; border: 3px solid #ddd; border-color:black')
    p#demo
    button(type='button', onclick="fullsize()", style='position: absolute; bottom: 10px; right: 10px; background:rgba(255,255,255,.7); border:none; padding:6px 10px; color:#000') Full screen
    button(type='button', onclick="minimize()", style='position: absolute; bottom: 10px; right: 105px; background:rgba(255,255,255,.7); border:none; padding:6px 10px; color:#000') Minimize


  script(src="/js/pako.js")
  script(src='/js/visualizer.js')