doctype html
html
  head
    link(rel='stylesheet', type='text/css', href='css/style.css')
    title live streaming
    script(src='/socket.io/socket.io.js')
    link(rel='stylesheet', href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css')
    script(src='https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js')
    script(src='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js')
  body
    nav.navbar.navbar-default
      .container-fluid
        // Brand and toggle get grouped for better mobile display
        .navbar-header
          button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#bs-example-navbar-collapse-1', aria-expanded='false')
            span.sr-only Toggle navigation
            span.icon-bar
            span.icon-bar
            span.icon-bar
          a.navbar-brand(href='/') Live Stream
        // Collect the nav links, forms, and other content for toggling
        #bs-example-navbar-collapse-1.collapse.navbar-collapse
          ul.nav.navbar-nav.navbar-right
            li
              a(href='/allch') All Channels
            li.dropdown
              a.dropdown-toggle(href='#', data-toggle='dropdown', role='button', aria-haspopup='true', aria-expanded='false')
                | account
                span.caret
              ul.dropdown-menu
                
                li
                  a(href='/newch') newchannel
                li
                  a(href='#') Something else here
                li.divider(role='separator')
                li
                  a(href='/logout') logout
    
    div(style='text-align: center')
      h2 Video Recording
      p Record a 320x240 video
      .select
        label(for='videoSource') Video source: 
        select#videoSource
      video#home(style='width:320px;height:240px', ;='', autoplay='true')
      br
      button#rec(onclick='onBtnRecordClicked()') Record
      canvas#preview(style='display:none')
    script(src='js/emitter.js')