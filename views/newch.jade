doctype html
html
  head
    link(rel='stylesheet', type='text/css', href='css/style.css')
    title live streaming
  body
    span.link1
      .header
       div(align='center')   
         table(width='100%', cellspacing='25')
           tr(style='font-size:15px;font-weight:bold')
             
             td(align='center', width='15%')
               a(href='/') Home
             td(align='center', width='15%')
               a(href='/newCh') New Channel
             td(align='center', width='15%')
               a(href='/allCh') All channels 
             td(align='center', width='20%')
               a(href='/user/signin') Signin
             td(align='center', width='20%')
               a(href='/user/signup') Signup
             td(align='center', width='20%')
              a(href="/user/logout") logout

    - if (msg.length > 0) { 
        div(align="center" style="color: red")
          p= msg 
    - }

    div(align='center')
          table
            tr
              td
                form(action='/newch', method='post', name='newchannel')
                  table(cellspacing='15')
                    tr
                      td(colspan='2', align='center')
                        h1(style='color:black') Create your new channel
                    tr
                      td(colspan='2',align='center')
                        input(type='text', name='channelName', size='27', placeholder='name', style='color:gray')
                    tr
                      td(colspan='2',align='center')
                        input(type='token', name='token', size='27', placeholder='token', style='color:gray')
                    
                    tr
                      td(colspan='2', align='center')
                        input(type='submit', value='submit', style='background-color:#B0C4DE;color:black;height:35px;width:70px; border-radius: 25px')