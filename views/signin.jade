doctype html
html
  head
    link(rel='stylesheet', type='text/css', href='css/style.css')
    title live streaming
  body
    span.link1
      .header
       div(align='center')   
         table(width='100%', cellspacing='25')
           tr(style='font-size:15px;font-weight:bold')
             
             td(align='center', width='15%')
               a(href='/') Home
             td(align='center', width='15%')
               a(href='/newCh') New Channel
             td(align='center', width='15%')
               a(href='/allCh') All channels 
             td(align='center', width='20%')
               a(href='/user/signin') Signin
             td(align='center', width='20%')
               a(href='/user/signup') Signup
             td(align='center', width='20%')
              a(href="/user/logout") logout
      br
      br
      br

      - if (msg.length > 0) { 
        div(align="center" style="color: red")
          p= msg 
      - } 

    div(align='center')
      table
        tr
          td
            form(action='/user/signin', method='post', name='loginform')
              table(cellspacing='15')
                tr
                  td(colspan='2', align='center')
                    h2(style='color:black') Login in to your Account
                tr
                  td(colspan='2')
                    input(type='text', name='user_id', size='27', placeholder='UserId', style='color:gray')
                tr
                  td(colspan='2')
                    input(type='password', name='password', size='27', placeholder='Password', style='color:gray')
                tr
                  td(colspan='2', align='center')
                    input(type='submit', value='LOGIN', style='background-color:#B0C4DE;color:black;height:35px;width:70px; border-radius: 25px')
                tr
                  td
                    a(href='/user/signin', style='color:black') Forgot Password
                  td
                    a(href='/user/signup', style='color:black') Register